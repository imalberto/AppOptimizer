[
    {
        "settings": [ "master" ],
        "mojitsDirs": [
            "./mojits"
        ],
        "viewEngine": {
            "mu": {
                "bufferOutput": true
            }
        },
        "deployRuntimeClient": {
            "//": "optimize how the mojito-client runtime is deployed",
            "//": "can provide mulitple options",
            "useCompression": true,
            "//": "Exclude list of keys on the config object that is deployed",
            "exclude": [
                "assets",
                "log"
            ]
        },
        "embedJsFilesInHtmlFrame": false,
        "yui": {
            "XXbase": "/Users/albertoc/fs/stage/js/yui/build/"
        },
        "log": {
            "client": {
                "buffer": false,
                "defaultLevel": "debug",
                "level": "mojito",
                "yui": true
            },
            "server": {
                "buffer": false,
                "defaultLevel": "debug",
                "level": "debug",
                "yui": true
            }
        },
        "shaker": {
            "task": "local"
        }
    },
    {
        "settings": [ "environment:test" ],
        "staticHandling": {
            "forceUpdate": true
        },
        "log": {
            "client": {
                "level": "debug",
                "yui": false
            },
            "server": {
                "level": "debug",
                "yui": true
            }
        },
        "deployRuntimeClient": {
            "//": "optimize how the mojito-client runtime is deployed",
            "//": "can provide mulitple options",
            "useCompression": true,
            "//": "Exclude list of keys on the config object that is deployed",
            "exclude": [
                "assets",
                "log"
            ]
        },
        "shaker": {
            "task": "raw"
        }
    },
    {
        "settings": [ "environment:stage" ],
        "staticHandling": {
            "forceUpdate": true
        }
    }
]
